<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <div class="container">
      <form class="list_form" action="/" method="post">
        <div class="input_todo">
          <input type="text" name="todos" placeholder="add todo...">
          <input type="submit" name="submit" value="submit">
        </div>
        {{#todos}}
        <form class="complete" action="/" method="post">
          <div class="todo">
          <button type="submit" name="complete" value="{{.}}">Mark as complete</button>
          <p>{{.}}</p>
        </div>
        </form>
        {{/todos}}
      </form>
      <div class="complete_list">
        <h1>completed items</h1>
        {{#complete}}
        <li>{{.}}</li>
        {{/complete}}
      </div>








    </div>
  </body>
</html>
